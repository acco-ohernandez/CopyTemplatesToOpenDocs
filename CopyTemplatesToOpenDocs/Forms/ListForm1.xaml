        <DataGrid x:Name="dataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False" 
                  Margin="10,10,10,62" 
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch"
                  ColumnWidth="*"
                  GridLinesVisibility="Horizontal"
        >
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Selected" Binding="{Binding IsChecked}" IsReadOnly="False"
                                        Width="*" MinWidth="10" MaxWidth="50"/>

                <DataGridTextColumn Header="View Template name" Binding="{Binding}" />
            </DataGrid.Columns>
            </DataGrid>

        <Button x:Name="btn_Import" Grid.Row="5" Content="Ok" Width="150" Height="30" Click="btn_Import_Click"/>
        <Label Grid.Row="2" x:Name="lbl_ExportCount" Content="Copy Templates..." HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="12" FontWeight="Bold"/>
